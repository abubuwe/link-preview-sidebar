{
	"manifest_version": 3,
	"name": "MMC Crunchbase Extension",
	"description": "Preview Crunchbase profile for companies in a sidebar",
	"version": "0.2.0",
	"permissions": [
		"activeTab",
		"storage",
		"webRequest",
		"tabs",
		"scripting",
		"declarativeNetRequest",
		"declarativeNetRequestFeedback"
	],
	"host_permissions": ["*://*/*"],
	"icons": {
		"128": "/images/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["src/content.tsx"]
		}
	],
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "ruleset",
				"enabled": true,
				"path": "/rules.json"
			}
		]
	},
	"action": {},
	"web_accessible_resources": [
		{
			"resources": ["src/content.tsx", "src/templates/*"],
			"matches": ["*://*/*"]
		}
	],
	"background": {
		"service_worker": "background.ts"
	}
}
