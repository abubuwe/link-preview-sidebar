{
	"manifest_version": 3,
	"name": "MMC Crunchbase Extension",
	"description": "Preview Crunchbase profile for companies in a sidebar",
	"version": "0.2.0",
	"permissions": ["activeTab", "storage", "webRequest", "webRequestBlocking", "tabs", "scripting"],
	"host_permissions": ["*://*/*"],
	"icons": {
		"128": "/images/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["src/content.tsx"]
		}
	],
	"action": {},
	"web_accessible_resources": [
		{
			"resources": ["src/content.tsx", "src/templates/*"],
			"matches": ["*://*/*"]
		}
	],
	"background": {
		"service_worker": "src/background.ts"
	}
}
